<div class="container">
	<div class="row">
		<h1>Follower Users</h1>
	</div>
	<div class="row">
		<table class="table">
            <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <a><%= attachment_image_tag user, :profile_image, size: "60x60", format: 'jpeg' , class: "pull-left profile-thumb", fallback: "no_image.jpg" %></a>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    フォロー数：<%= user.followings.count %>
                  </td>
                  <td>
                    フォロワー数：<%= user.followers.count %>
                  </td>
                  <td>
                    <% unless current_user == user %>
                      <% if current_user.following?(user) %>
                        <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
                          <%= hidden_field_tag :follow_id, user.id %>
                          <%= f.submit 'フォロー外す', class: 'btn btn-danger' %>
                        <% end %>
                      <% else %>
                        <%= form_for(current_user.relationships.build) do |f| %>
                          <%= hidden_field_tag :follow_id, user.id %>
                          <%= f.submit 'フォローする', class: 'btn btn-primary' %>
                        <% end %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "Show", user_path(user.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
	</div>
</div>